# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# API Configuration
# ==============================================

# Backend API endpoint
# Development: http://localhost:3000/api
# Production: https://api.resilientprivacy.com
VITE_API_URL=http://localhost:3000/api

# API version
VITE_API_VERSION=v1

# ==============================================
# Backend Security Configuration [REQUIRED]
# ==============================================

# JWT Secret - REQUIRED for production
# Must be at least 32 characters in production
# Generate a strong secret with: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Initial Admin Password (optional, defaults to admin123)
# Set this to override the default admin password on first database initialization
# MUST be changed after first login via the admin panel
# INITIAL_ADMIN_PASSWORD=YourStrongPasswordHere

# Server Port (optional, defaults to 5001)
PORT=5001

# Node Environment (development/production)
# CRITICAL: Set to "production" in production environments
NODE_ENV=development

# CORS allowed origins (comma-separated list for production)
# Example: https://resilientprivacy.com,https://www.resilientprivacy.com
# Leave empty for development (allows all origins)
# REQUIRED in production for security
CORS_ORIGIN=

# ==============================================
# Frontend Security Configuration
# ==============================================

# Enable security headers (true/false)
VITE_ENABLE_SECURITY_HEADERS=true

# Content Security Policy mode (report-only/enforce)
VITE_CSP_MODE=enforce

# ==============================================
# Feature Flags
# ==============================================

# Enable cookie consent banner
VITE_ENABLE_COOKIE_CONSENT=true

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=false

# ==============================================
# Logging Configuration
# ==============================================

# Enable file logging in development (optional, disabled by default)
# File logging is always enabled in production
# ENABLE_FILE_LOGGING=true

# Log level (error/warn/info/http/debug)
# Development default: debug
# Production default: info
# LOG_LEVEL=info

# ==============================================
# Rate Limiting
# ==============================================

# Form submission cooldown (milliseconds)
VITE_FORM_COOLDOWN=5000

# Max form submissions per hour
VITE_MAX_SUBMISSIONS_PER_HOUR=5

# ==============================================
# Third-Party Services
# ==============================================

# Google Analytics ID (if enabled)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN (if error reporting enabled)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ==============================================
# Development Settings
# ==============================================

# Enable debug mode (shows detailed errors)
VITE_DEBUG_MODE=false

# Enable verbose logging
VITE_VERBOSE_LOGGING=false

# ==============================================
# Production Settings
# ==============================================

# Production domain
# VITE_PRODUCTION_DOMAIN=resilientprivacy.com

# Enable HTTPS enforcement
# VITE_ENFORCE_HTTPS=true

# ==============================================
# Notes
# ==============================================
# 
# 1. All VITE_ prefixed variables are exposed to the client
# 2. Never put sensitive secrets in VITE_ variables
# 3. Use server-side environment variables for sensitive data
# 4. Update .gitignore to exclude .env files
# 5. Document any new variables in this template
